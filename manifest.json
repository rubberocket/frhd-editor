	"name":"Free Rider HD Offline Editor",
		
	"short_name":"FRHD Editor",

	"description":"Draw and play Free Rider HD tracks offline!",
	
	"version":"1.6",
	
	"manifest_version":2,
	
	"app":{
		"background":{
			"scripts":["background.js"]
